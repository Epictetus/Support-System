<div class="page-header">
  <h1><%= @issue.name %> <small>was assigned to <strong><%= @issue.assigned %></strong> on <strong>date</strong>.</small></h1>
</div>

<% if flash[:alert] %>
    <p class="flash-error"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:notice] %>
    <p class="flash-notice"><%= flash[:notice] %></p>
<% end %>

<div class="row">
    <div class="span4 columns">
      <h2><%= @issue.priority %></h2>
    </div>

	<div class="span12 columns">
	      <h4>Issue details.</h4>
		  <%= @issue.description %>
		  
    </div>
  </div><!-- /row -->


  


<%= link_to 'Edit', edit_issue_path(@issue), :class => 'btn info' %>
<%= link_to 'Back', issues_path, :class => 'btn default' %>
